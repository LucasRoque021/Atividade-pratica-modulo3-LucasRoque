@{
    ViewData["Title"] = "Home";
}
<section>
    <div id="carouselExampleControls" class="carousel slide mb-3" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/foto_rio.png" alt="Foto do Rio de Janeiro">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Rio de Janeiro</h5>

                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/foto_salvador.png" alt="Foto de Salvador">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Salvador</h5>
                </div>

            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/foto_sp.png" alt="Foto de São Paulo">
                <div class="carousel-caption d-none d-md-block">
                    <h5>São Paulo</h5>
                </div>

            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Anterior</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Próximo</span>
            </a>
        </div>
    </div>
</section>

<section>
    <div class="text-center mb-2">
        <h1 class="display-4">Bem-Vindo(a) à LR Viagens</h1>
        <p>Viagens de norte a sul do Brasil!</p>

        <div class="container">
            <div class="row justify-content-around">
                <div class="info-cards col-12 col-sm-5 mb-4">
                    <h5>Passagens para o Brasil inteiro</h5>
                    <div>
                        <img id="mapa-brasil" src="~/images/mapa_brasil.png" alt="Mapa do Brasil"/>
                        <ul>
                            
                            <li>Ônibus fretados</li>
                            <li>Variedade de horários de embarque</li>

                        </ul>

                    </div>
                </div>

                <div class="info-cards col-12 col-sm-5 mb-4">
                    <h5>Nossos ônibus</h5>
                    <div>
                        <img id="onibus" src="~/images/bus.png" alt="Ônibus" />
                        <ul>
                            <li>Wi-fi</li>
                            <li>Ar-condicionado</li>
                            <li>Conforto</li>
                            <li>Segurança</li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>

    </div>
</section>


